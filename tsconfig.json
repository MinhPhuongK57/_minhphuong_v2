{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "paths": {
    "@*": [
      "../src/*"
    ]
  },
  "include": [
    "./lib/**/*",
    ".next/types/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "declaration.d.ts",
    "**/*.svg",
  ],
  "exclude": [
    "node_modules"
  ]
}